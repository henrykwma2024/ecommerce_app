


<body>
    <main class="flex">
        <nav class="flex w-full">
            <div class="flex flex-col text-gray-50 gap-8">    
                <span class="hidden md:inline-block font-semibold text-xl text-indigo-900">Dasboard</span><%= image_tag 'icons/LayoutDashboard.svg' %>
                <span class="hidden md:inline-block">Products</span>
                <%= link_to "Products", products_path, class: "rounded-lg font-semibold p-4 text-center text-xl bg-blue-400 hover:bg-blue-500" %>
                <span class="hidden md:inline-block">Categories</span>
                <%= link_to "Categories", categories_path, class: "rounded-lg font-semibold p-4 text-center text-xl bg-green-400 hover:bg-green-500" %>
                <span class="hidden md:inline-block">Orders</span>
                <%= link_to "Orders", checkout_cart_path, class: "rounded-lg font-semibold p-4 text-center text-xl bg-yellow-400 hover:bg-yellow-500" %>   
                <span class="hidden md:inline-block">Sign Out</span>
                <br/>
                <%= link_to "New Products", new_product_path, class: "rounded-lg font-semibold p-4 text-center text-xl bg-green-400 hover:bg-green-500" %>     
                <br/>

            </div>
        </nav>
        <div class="w-full flex flex-col ">
        <div class="flex justify-between w-full items-center">  
            <div class="flex flex-col gap-4">
            <h1 class="text-5xl"> Order items </h1>
            <% if @current_cart&.cart_items&.any? %>
                <p class="text-lg"> Ording <%= @current_cart.cart_items.count %> items </p>
            <% else %>
                <p class="text-lg"> You don't have any items in your order yet. </p>
            <% end %>
            </div>
        </div>
        <br/>
        <div id="products" class="min-w-full grid md:grid-cols-4 gap-8 mb-8">
            <% if @current_cart&.products&.any? %>  
            <% @current_cart.products.each do |product| %>
                <div>
                <%= render "products/product", product: product %>
                <br/>
                </div>
            <% end %>
            <% end %>
        </div>
        
    </main>
</body>
    