<div id="add-to-cart" class="w-full flex">    
    <% if @current_cart && @current_cart.products.where(id: @product.id).any? %>
        <div class="rounded-lg font-semibold p-4 text-center text-xl bg-green-500 hover:bg-green-500 w-full"> Already In Cart </div>
    <% else %>
        <%= link_to "Add To Cart", cart_path(product_id: @product.id), class: "rounded-lg font-semibold p-4 text-center text-xl bg-green-500 hover:bg-green-500 w-full", data: { turbo_method: :post } %>
    <% end %>
</div>