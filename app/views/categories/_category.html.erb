<%= link_to category do %>
  <div id="<%= dom_id category %>" class="relative flex items-center justify-center">
    <%= image_tag category.image, class:"w-full h-40 object-cover rounded-lg brightness hover:brightness-75 transition-all duration-250" if category.image.attached? %>
    <p class="text-lg text-green-500 absolute text-3xl font-bold"> <%= category.name %> </P>  
  </div>
<% end %>
