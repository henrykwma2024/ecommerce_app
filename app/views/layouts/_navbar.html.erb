<div class="h-16 w-full fixed top-0 bg-gray-900 z-50"> 
    <div class="max-w-7xl h-full w-full mx-auto flex items-center justify-between px-8">
        <%= link_to root_path, class: "text-xl text-blue-800 flex items-end gap-4" do %>
            <%= image_tag("home.png", class: "w-10 object-cover") %>
            <span class="text-gray-100"> Home</span>
            <%= link_to "Shop by Category", categories_path, class:"text-gray-100"%>     
        <% end %>

        <div class="flex items-center gap-6">
            <div>
                <% if current_user %>
                    <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method":  :delete }, class: "text-indigo-100"  %>
                <% else %>
                    <%= link_to "Login", new_user_session_path, class: "bg-gray-500 text-gray-200 rounded-lg p-2" %>
                    <%= link_to "Sign up", new_user_registration_path, class: "text-gray-100 text-lg" %>
                <% end %>
             </div>   
            <%= link_to cart_path do %>
                <%= render "layouts/cart", cart: @current_cart %>
            <% end %>
        </div>
    </div>
</div>